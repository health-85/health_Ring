<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:paddingBottom="26dp"
                android:background="@drawable/main_item_bg"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/yesterday_performance"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.healthy.rvigor.view.PerformanceView
                    android:id="@+id/bar_performance"
                    android:layout_width="240dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="60dp"
                    app:circleArcColor="#46F79F"
                    app:circleArcStartColor="#46F79F"
                    app:circleArcWhiteCircleRadius="3dp"
                    app:circleArcWidth="10dp"
                    app:circleCenterTextColor="@color/transparent"
                    app:circleCenterTextSize="24sp"
                    app:circleCircleRadius="120dp"
                    app:circleInnerArcWidth="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tv_performance_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:text="@string/performance_rating"
                    android:textColor="#ff7c7d8c"
                    android:textSize="14sp"

                    app:layout_constraintBottom_toTopOf="@+id/tv_performance_level"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/img_performance_face"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:src="@mipmap/ic_face_4"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_performance_level"
                    app:layout_constraintEnd_toStartOf="@+id/tv_performance_level"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_performance_level" />

                <TextView
                    android:id="@+id/tv_performance_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:includeFontPadding="false"
                    android:text="--"
                    android:textColor="#ffffffff"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/bar_performance"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/img_performance_face" />

                <TextView
                    android:id="@+id/tv_performance_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:includeFontPadding="false"
                    android:visibility="gone"
                    android:text="@string/performance_remark_3"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_performance_level" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/main_item_bg"
                android:paddingBottom="20dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/svg_main_sleep"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:includeFontPadding="false"
                    android:text="@string/sleep"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_sleep"
                    app:layout_constraintStart_toEndOf="@+id/img_sleep"
                    app:layout_constraintTop_toTopOf="@+id/img_sleep" />

                <ImageView
                    android:id="@+id/img_sleep_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="23dp"
                    android:paddingBottom="15dp"
                    android:src="@drawable/svg_circle_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.healthy.rvigor.view.CirclePercentBar
                    android:id="@+id/bar_sleep_score"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    app:arcColor="#FFCD51"
                    app:arcEndColor="#FFCD51"
                    app:arcStartColor="#FFCD51"
                    app:arcWidth="10dp"
                    app:centerTextColor="#FFCD51"
                    app:centerTextSize="24sp"
                    app:circleRadius="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_sleep" />

                <TextView
                    android:id="@+id/tv_quality_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/quality_score"
                    android:textColor="#ff7c7d8c"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_quality_score"
                    app:layout_constraintEnd_toEndOf="@+id/bar_sleep_score"
                    app:layout_constraintStart_toStartOf="@+id/bar_sleep_score"
                    app:layout_constraintTop_toTopOf="@+id/bar_sleep_score"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tv_quality_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="--"
                    android:textColor="#ffffffff"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/bar_sleep_score"
                    app:layout_constraintEnd_toEndOf="@+id/bar_sleep_score"
                    app:layout_constraintStart_toStartOf="@+id/bar_sleep_score"
                    app:layout_constraintTop_toBottomOf="@+id/tv_quality_title"
                    tools:text="69" />

                <View
                    android:id="@+id/line"
                    android:layout_width="1dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="25dp"
                    android:background="#3E3E58"
                    app:layout_constraintBottom_toBottomOf="@+id/bar_sleep_score"
                    app:layout_constraintStart_toEndOf="@+id/bar_sleep_score"
                    app:layout_constraintTop_toTopOf="@+id/bar_sleep_score" />

                <TextView
                    android:id="@+id/tv_duration_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:text="@string/sleep_duration"
                    android:textColor="#ff7c7d8c"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@+id/line"
                    app:layout_constraintTop_toTopOf="@+id/line" />

                <TextView
                    android:id="@+id/tv_sleep_len"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="--"
                    android:textColor="#ffffffff"
                    android:textSize="30sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_duration_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_duration_title" />

                <TextView
                    android:id="@+id/tv_start_end_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_end_time"
                    android:textColor="#ff7c7d8c"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_duration_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sleep_len" />

                <TextView
                    android:id="@+id/tv_start_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_duration_title"
                    app:layout_constraintTop_toBottomOf="@+id/tv_start_end_tip"
                    tools:text="0:24-7:45" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_sleep_risk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/bar_sleep_score">

                    <TextView
                        android:id="@+id/tv_sleep_risk"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/bg_sleep_risk"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:text="@string/sleep_risks"
                        android:textColor="#ffffffff"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/risk_empty_view"
                        android:layout_width="match_parent"
                        android:layout_height="14dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_sleep_risk" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_sleep_ox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="-4dp"
                        android:layout_marginEnd="27dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/risk_empty_view">

                        <ImageView
                            android:id="@+id/img_sleep_ox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/shape_dotted_circle"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_sleep_ox"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_sleep_ox" />

                        <TextView
                            android:id="@+id/tv_sleep_ox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:includeFontPadding="false"
                            android:textColor="#ffffffff"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/img_sleep_ox"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="整晚最低血氧93%，疑似呼吸窘迫" />

                        <ImageView
                            android:id="@+id/img_sleep_ox_line"
                            android:layout_width="1dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/layer_line"
                            app:layout_constraintEnd_toEndOf="@+id/img_sleep_ox"
                            app:layout_constraintStart_toStartOf="@+id/img_sleep_ox"
                            app:layout_constraintTop_toBottomOf="@+id/img_sleep_ox" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_deep_sleep"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="-4dp"
                        android:layout_marginEnd="27dp"
                        app:layout_constraintTop_toBottomOf="@+id/cl_sleep_ox">

                        <ImageView
                            android:id="@+id/img_deep_sleep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/shape_dotted_circle"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_deep_sleep"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_deep_sleep" />

                        <TextView
                            android:id="@+id/tv_deep_sleep"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:includeFontPadding="false"
                            android:textColor="#ffffffff"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/img_deep_sleep"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="深睡眠不足" />

                        <ImageView
                            android:id="@+id/img_deep_sleep_line"
                            android:layout_width="1dp"
                            android:layout_height="16dp"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/layer_line"
                            android:visibility="gone"
                            app:layout_constraintEnd_toEndOf="@+id/img_deep_sleep"
                            app:layout_constraintStart_toStartOf="@+id/img_deep_sleep"
                            app:layout_constraintTop_toBottomOf="@+id/img_deep_sleep" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_sleep_heart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="27dp"
                        android:layout_marginTop="-4dp"
                        android:layout_marginEnd="27dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@+id/cl_deep_sleep">

                        <ImageView
                            android:id="@+id/img_sleep_heart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/shape_dotted_circle"
                            app:layout_constraintBottom_toBottomOf="@+id/tv_sleep_heart"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_sleep_heart" />

                        <TextView
                            android:id="@+id/tv_sleep_heart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:includeFontPadding="false"
                            android:textColor="#ffffffff"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/img_sleep_heart"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="静息心率过高，夜间恢复不好" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_motion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/main_item_bg"
                android:paddingBottom="12dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_motion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/svg_main_motion"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:includeFontPadding="false"
                    android:text="@string/events"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_motion"
                    app:layout_constraintStart_toEndOf="@+id/img_motion"
                    app:layout_constraintTop_toTopOf="@+id/img_motion" />

                <ImageView
                    android:id="@+id/img_motion_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="23dp"
                    android:paddingBottom="15dp"
                    android:src="@drawable/svg_circle_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_motion_data_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_100f1e_10"
                    app:layout_constraintTop_toBottomOf="@+id/img_motion">

                    <com.healthy.rvigor.view.MainDataView
                        android:id="@+id/motion_view"
                        android:layout_width="match_parent"
                        android:layout_height="111dp"
                        app:endColor="#F66B2A"
                        app:isShowGradient="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:startColor="#F9AC33"
                        app:style="bar" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.healthy.rvigor.view.bubble.BubbleSeekBar
                    android:id="@+id/motion_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="10dp"
                    app:bsb_max="5000"
                    app:bsb_min="0"
                    app:bsb_progress="200"
                    app:bsb_show_thumb_text="true"
                    app:bsb_thumb_text_color="@color/white"
                    app:bsb_thumb_text_size="14sp"
                    app:bsb_track_size="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/cl_motion_data_view" />

                <TextView
                    android:id="@+id/tv_start_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="37dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="@string/sort_step_tip"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/motion_seekbar" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_mind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/main_item_bg"
                android:paddingBottom="18dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_mind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/svg_mind"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="sans-serif-medium"
                    android:includeFontPadding="false"
                    android:text="@string/mental_health"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/img_mind"
                    app:layout_constraintStart_toEndOf="@+id/img_mind"
                    app:layout_constraintTop_toTopOf="@+id/img_mind" />

                <ImageView
                    android:id="@+id/img_mind_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="50dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="23dp"
                    android:paddingBottom="15dp"
                    android:src="@drawable/svg_circle_right"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/img_mind_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/svg_mind_mild"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_mind" />

                <TextView
                    android:id="@+id/tv_state_assessment_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="53dp"
                    android:text="@string/mental_state_assessment"
                    android:textColor="#ff7c7d8c"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_mind" />

                <TextView
                    android:id="@+id/tv_mind_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:includeFontPadding="false"
                    android:text="@string/mild_disorder"
                    android:textColor="#ffffffff"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_state_assessment_tip" />

                <TextView
                    android:id="@+id/tv_mind_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#ff7c7d8c"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mind_state"
                    tools:text="13:30" />

                <TextView
                    android:id="@+id/tv_mind_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="33dp"
                    android:text="@string/normal_tip"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mind_time" />

                <TextView
                    android:id="@+id/tv_stress_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/stress_expression"
                    android:textColor="#ff7c7d8c"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_fatigue_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mind_msg" />

                <TextView
                    android:id="@+id/tv_fatigue_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fatigue_degree"
                    android:textColor="#ff7c7d8c"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/tv_emotional_title"
                    app:layout_constraintStart_toEndOf="@+id/tv_stress_title"
                    app:layout_constraintTop_toTopOf="@+id/tv_stress_title" />

                <TextView
                    android:id="@+id/tv_emotional_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
