<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:paddingStart="30dp"
        android:paddingTop="12dp"
        android:ellipsize="end"
        android:paddingBottom="12dp"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/fl_bind"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="BIOSENSE-RING-XXXX" />

    <FrameLayout
        android:id="@+id/fl_bind"
        android:layout_width="72dp"
        android:layout_height="30dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/bg_1a192a_15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_device_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:maxEms="20"
            android:maxLines="1"
            android:text="@string/bind"
            android:textColor="#6DFFE9"
            android:textSize="18sp"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/img_progress"
            style="@style/myProgressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/svg_progress"
            android:visibility="invisible" />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>