<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="15dp"
    android:background="@drawable/main_item_bg">

    <ImageView
        android:id="@+id/img_sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/svg_main_sleep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-medium"
        android:includeFontPadding="false"
        android:text="@string/sleep"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_sleep"
        app:layout_constraintStart_toEndOf="@+id/img_sleep"
        app:layout_constraintTop_toTopOf="@+id/img_sleep" />

    <ImageView
        android:id="@+id/img_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="23dp"
        android:paddingBottom="15dp"
        android:src="@drawable/svg_circle_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.healthy.rvigor.view.CirclePercentBar
        android:id="@+id/bar_score"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:arcColor="#FFCD51"
        app:arcStartColor="#FFCD51"
        app:arcWidth="10dp"
        app:centerTextColor="#FFCD51"
        app:centerTextSize="24sp"
        app:circleRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_sleep" />

    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="90dp"
        android:layout_marginStart="25dp"
        android:background="#3E3E58"
        app:layout_constraintBottom_toBottomOf="@+id/bar_score"
        app:layout_constraintStart_toEndOf="@+id/bar_score"
        app:layout_constraintTop_toTopOf="@+id/bar_score" />

    <TextView
        android:id="@+id/tv_duration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:text="@string/sleep_duration"
        android:textColor="#ff7c7d8c"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/line"
        app:layout_constraintTop_toTopOf="@+id/line" />

    <TextView
        android:id="@+id/tv_sleep_len"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="7"
        android:textColor="#ffffffff"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/tv_duration_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_duration_title" />

    <TextView
        android:id="@+id/tv_start_end_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_end_time"
        android:textColor="#ff7c7d8c"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tv_duration_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_sleep_len" />

    <TextView
        android:id="@+id/tv_start_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tv_duration_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_start_end_tip"
        tools:text="0:24-7:45" />

    <TextView
        android:id="@+id/tv_sleep_risk"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_sleep_risk"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:text="@string/sleep_risks"
        android:textColor="#ffffffff"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/bar_score" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_risk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingBottom="21dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_sleep_risk" />

</androidx.constraintlayout.widget.ConstraintLayout>