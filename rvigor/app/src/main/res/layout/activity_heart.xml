<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.healthy.rvigor.view.CusToolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:center_title="@string/heart_rate"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <RadioGroup
                android:id="@+id/rg_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent">

                <RadioButton
                    android:id="@+id/rbt_one_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal|center"
                    android:text="@string/one_day"
                    android:textColor="@drawable/selector_heart_txt"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <RadioButton
                    android:id="@+id/rbt_7_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="false"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal|center"
                    android:text="@string/seven_day"
                    android:textColor="@drawable/selector_heart_txt"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <RadioButton
                    android:id="@+id/rbt_30_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="false"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal|center"
                    android:text="@string/thirty_day"
                    android:textColor="@drawable/selector_heart_txt"
                    android:textSize="16sp"
                    android:visibility="visible" />

            </RadioGroup>

            <com.healthy.rvigor.view.SpecDateSelectedView
                android:id="@+id/spec_date"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="16sp"
                app:timeRightImg="@drawable/svg_day_down"
                tools:text="2024/1/24" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_tabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:paddingBottom="25dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/ll_ox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_heart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:includeFontPadding="false"
                            android:text="--"
                            android:textColor="#ffffffff"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="2dp"
                            android:text="@string/times_minute"
                            android:textColor="#ff7c7d8c"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:includeFontPadding="false"
                        android:textColor="#ff7c7d8c"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ll_ox"
                        tools:text="11:55" />

                    <com.healthy.rvigor.view.HeartDataView
                        android:id="@+id/heart_view"
                        android:layout_width="match_parent"
                        android:layout_height="162dp"
                        app:dataBarWidth="4dp"
                        app:dataStyle="line"
                        app:layout_constraintTop_toBottomOf="@+id/tv_time" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.healthy.rvigor.view.RectDataView
                    android:id="@+id/rect_data_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintBottom_toBottomOf="@+id/cl_tabel"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="11dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_item_bg"
                    android:paddingTop="9dp"
                    android:paddingBottom="11dp">

                    <TextView
                        android:id="@+id/tv_average_heart_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/svg_average"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/mean_heart_rate"
                        android:textColor="#ff7c7d8c"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_average_heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="--"
                        android:textColor="#ffffffff"
                        android:textSize="30sp"
                        app:layout_constraintEnd_toStartOf="@+id/tv_heart_uni"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_average_heart_title" />

                    <TextView
                        android:id="@+id/tv_heart_uni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginBottom="3dp"
                        android:text="@string/times_minute"
                        android:textColor="#ff7c7d8c"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_average_heart"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_average_heart" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/main_item_bg"
                    android:paddingTop="9dp"
                    android:paddingBottom="11dp">

                    <TextView
                        android:id="@+id/tv_resting_rate_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/svg_resting_rate"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/resting_heart_rate"
                        android:textColor="#ff7c7d8c"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_resting_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="--"
                        android:textColor="#ffffffff"
                        android:textSize="30sp"
                        app:layout_constraintEnd_toStartOf="@+id/tv_range_rate_uni"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_resting_rate_title" />

                    <TextView
                        android:id="@+id/tv_range_rate_uni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginBottom="3dp"
                        android:text="@string/times_minute"
                        android:textColor="#ff7c7d8c"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_resting_rate"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_resting_rate" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="11dp"
                    android:layout_weight="1"
                    android:background="@drawable/main_item_bg"
                    android:paddingTop="9dp"
                    android:paddingBottom="11dp">

                    <TextView
                        android:id="@+id/tv_max_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/svg_up_arrow"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/max_rate"
                        android:textColor="#ff7c7d8c"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_max_heart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="--"
                        android:textColor="#ffffffff"
                        android:textSize="30sp"
                        app:layout_constraintEnd_toStartOf="@+id/tv_max_uni"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_max_title" />

                    <TextView
                        android:id="@+id/tv_max_uni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginBottom="3dp"
                        android:text="@string/times_minute"
                        android:textColor="#ff7c7d8c"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_max_heart"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_max_heart" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/main_item_bg"
                    android:paddingTop="9dp"
                    android:paddingBottom="11dp">

                    <TextView
                        android:id="@+id/tv_min_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/svg_down_arrow"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/minimum_rate"
                        android:textColor="#ff7c7d8c"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_min_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="--"
                        android:textColor="#ffffffff"
                        android:textSize="30sp"
                        app:layout_constraintEnd_toStartOf="@+id/tv_min_uni"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_min_title" />

                    <TextView
                        android:id="@+id/tv_min_uni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginBottom="3dp"
                        android:text="@string/times_minute"
                        android:textColor="#ff7c7d8c"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_min_rate"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_min_rate" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_abnormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/abnormal_heart_rate"
                    android:textColor="#ffffffff"
                    android:textSize="18sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_abnormal_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_heart_measure"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="33dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="33dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_measure_heart"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="@string/heart_measure"
                android:textColor="#E03F52"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
