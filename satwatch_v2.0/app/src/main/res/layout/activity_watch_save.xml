<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_test_save"
        android:layout_width="0dp"
        android:layout_height="50dip"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:onClick="testSave"
        android:text="开始测量"
        android:textColor="@color/black_33"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/btn_clean"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_clean"
        android:layout_width="0dp"
        android:layout_height="50dip"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:onClick="cleanLog"
        android:text="清空数据"
        android:textColor="@color/black_33"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_test_save"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="0dp"
        android:layout_height="50dip"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:onClick="stopTest"
        android:text="停止测试"
        android:textColor="@color/black_33"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/btn_clean"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_test_save" />

    <Button
        android:id="@+id/btn_share"
        android:layout_width="0dp"
        android:layout_height="50dip"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:onClick="share"
        android:text="分享数据"
        android:textColor="@color/black_33"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/btn_share_original"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_stop" />

    <Button
        android:id="@+id/btn_share_original"
        android:layout_width="0dp"
        android:layout_height="50dip"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:onClick="shareOriginal"
        android:text="分享原始数据"
        android:textColor="@color/black_33"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_share"
        app:layout_constraintTop_toBottomOf="@+id/btn_stop" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_share_original">

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_share_original" />

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>